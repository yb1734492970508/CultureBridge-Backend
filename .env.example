# CultureBridge 环境变量配置

# 服务器配置
NODE_ENV=development
PORT=5000

# 数据库配置
MONGO_URI=mongodb://localhost:27017/culturebridge

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=30d

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_UPLOAD=10000000

# BNB链配置
BSC_MAINNET_RPC=https://bsc-dataseed1.binance.org:443
BSC_TESTNET_RPC=https://data-seed-prebsc-1-s1.binance.org:8545

# 智能合约地址（部署后更新）
CBT_TOKEN_ADDRESS=
IDENTITY_CONTRACT_ADDRESS=
MARKETPLACE_CONTRACT_ADDRESS=
EXCHANGE_CONTRACT_ADDRESS=

# 管理员私钥（用于奖励代币）
ADMIN_PRIVATE_KEY=

# Google Cloud配置（语音翻译）
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_CLOUD_KEY_FILE=./config/google-cloud-key.json

# Redis配置（可选，用于缓存和消息队列）
REDIS_URL=redis://localhost:6379

# 邮件配置（可选）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_EMAIL=your_email@gmail.com
SMTP_PASSWORD=your_app_password

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# 日志配置
LOG_LEVEL=info
LOG_FILE=./logs/app.log

