{
  "name": "culturebridge-backend",
  "version": "2.0.0",
  "description": "CultureBridge跨文化交流平台的增强版后端代码 - 集成区块链和AI技术",
  "main": "src/enhancedApp.js",
  "scripts": {
    "start": "node src/enhancedApp.js",
    "dev": "nodemon src/enhancedApp.js",
    "dev:legacy": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "compile": "npx hardhat compile",
    "deploy:testnet": "npx hardhat run blockchain/scripts/deploy.js --network bscTestnet",
    "deploy:mainnet": "npx hardhat run blockchain/scripts/deploy.js --network bscMainnet",
    "verify:testnet": "npx hardhat verify --network bscTestnet",
    "verify:mainnet": "npx hardhat verify --network bscMainnet",
    "blockchain:test": "npx hardhat test",
    "blockchain:node": "npx hardhat node",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "docs": "jsdoc -c jsdoc.conf.json",
    "clean": "rm -rf blockchain/artifacts blockchain/cache",
    "setup": "npm install && npm run compile",
    "health": "curl http://localhost:5000/health",
    "status": "curl http://localhost:5000/api/status"
  },
  "keywords": [
    "culture",
    "exchange",
    "backend",
    "api",
    "blockchain",
    "bnb-chain",
    "cbt-token",
    "voice-translation",
    "ai",
    "web3",
    "defi",
    "social"
  ],
  "author": "CultureBridge Team",
  "license": "MIT",
